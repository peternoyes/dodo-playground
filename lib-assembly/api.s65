		.export spi_write
		.export clear
		.export copy_background
		.export draw_string
		.export set_cursor
		.export read_buttons

pusha:
		ldy sp
		beq @L1
		dec sp
		ldy #0
		sta (sp), y
		rts
@L1:	dec sp+1
		dec sp
		sta (sp), y
		rts

pushax:
		pha
		lda sp
		sec
		sbc #2
		sta sp
		bcs @L1
		dec sp+1
@L1:	ldy #1
		txa
		sta (sp), y
		pla
		dey
		sta (sp), y
		rts

draw_sprite:
		lda #0
		jmp ($FFF8)

display:
		lda #1
		jmp ($FFF8)

clear_sprite:
		lda #2
		jmp ($FFF8)

set_pixel:
		lda #3
		jmp ($FFF8)

draw_line:
		lda #4
		jmp ($FFF8)

delay_ms:
