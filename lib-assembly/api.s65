		.include "zeropage.inc65"

		.setcpu "6502"

		.export pusha
		.export pushax

		.export draw_sprite
		.export display
		.export clear_sprite
		.export set_pixel
		.export draw_line
		.export delay_ms
		.export led_on
		.export led_off
		.export wait
		.export load_music
		.export play_effect
		.export spi_enable
